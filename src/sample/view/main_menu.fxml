<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.controller.MainMenuController"
      alignment="CENTER"
      spacing="25"
      stylesheets="/style/style.css"
      prefWidth="600" prefHeight="700">

    <Text text="Puzzle Slider" styleClass="title-text"/>

    <Button fx:id="btnNumber" text="Number Mode" onAction="#onNumberMode" styleClass="menu-button"/>
    <Button fx:id="btnImage" text="Image Mode" onAction="#onImageMode" styleClass="menu-button"/>
    <Button fx:id="btnSettings" text="Settings" onAction="#onSettings" styleClass="menu-button"/>
    <Button fx:id="btnExit" text="Exit" onAction="#onExit" styleClass="menu-button"/>
</VBox>
