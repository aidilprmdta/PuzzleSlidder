<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controller.GameController"
            prefWidth="900"
            prefHeight="700">

    <top>
        <HBox spacing="30" alignment="CENTER" style="-fx-padding: 20;">
            <Label fx:id="moveLabel" text="Moves: 0"/>
            <Label fx:id="timeLabel" text="Time: 00:00"/>
        </HBox>
    </top>

    <center>
        <GridPane fx:id="levelGrid"
                  alignment="CENTER"
                  hgap="5"
                  vgap="5"/>
    </center>

    <bottom>
        <HBox spacing="30" alignment="CENTER" style="-fx-padding: 20;">
            <Button text="Shuffle" onAction="#onShuffle"/>
            <Button text="Exit" onAction="#onExit"/>
        </HBox>
    </bottom>


</BorderPane>