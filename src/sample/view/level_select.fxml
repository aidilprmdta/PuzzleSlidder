<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<VBox spacing="20"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.controller.LevelSelectController">

    <Label text="SELECT LEVEL"
           style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <!-- NUMBER MODE GRID -->
    <GridPane fx:id="numberGrid"
              alignment="CENTER"
              hgap="8"
              vgap="8">

        <columnConstraints>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="33"/>
            <RowConstraints percentHeight="33"/>
            <RowConstraints percentHeight="33"/>
        </rowConstraints>
    </GridPane>

    <!-- IMAGE MODE GRID -->
    <GridPane fx:id="imageGrid"
              alignment="CENTER"
              hgap="8"
              vgap="8">

        <columnConstraints>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="33"/>
            <RowConstraints percentHeight="33"/>
            <RowConstraints percentHeight="33"/>
        </rowConstraints>
    </GridPane>

    <Button text="BACK" onAction="#onBack"/>

</VBox>
