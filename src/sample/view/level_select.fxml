<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<VBox spacing="20"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.controller.LevelSelectController"
      stylesheets="/style/style.css">

    <Label text="SELECT LEVEL" styleClass="section-title" />

    <GridPane fx:id="numberGrid" hgap="24" vgap="24"/>
    <GridPane fx:id="imageGrid" hgap="24" vgap="24"/>

    <Button text="BACK" onAction="#onBack" styleClass="btn-secondary"/>

</VBox>
